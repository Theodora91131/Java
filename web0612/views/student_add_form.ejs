        <div class="content">
            <h2>學生新增 </h2>

            <form action = "/student/add" method = "post">
                <div class="form">
                    <span class="name">學生編號: </span>
                    <span class="value"><input type="text" name="stuno"  maxlength="9" pattern="[A-Z]{1}[0-9]{8}"></span>
                    <br/>
                                    
                    <span class="name">學生名稱: </span>
                    <span class="value"><input type="text" name="name" ></span>
                    <br/>
                                                        
                    <span class="name">學制: </span>
                    <select name="division">
                        　<option value="R">日間</option>
                        　<option value="S">夜間</option>
                        </select>
                    <br/>
                                            
                    <span class="name">科別: </span>
                    <span class="value"><input type="text" name="department" ></span>
                    <br/>	 
                    
                    <span class="name">生日: </span>
                    <span class="value"><input type="date" name="birthday" ></span>
                    <br/>	 

                    <span class="name">實習年資: </span>
                    <span class="value"><input type="int2" name="intern" ></span>
                    <br/>	 
                                    
                    <span class="name"></span>
                    <span class="value"><input type="submit" value="新增" ></span>    
                </div>    
